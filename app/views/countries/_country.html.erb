<div id="<%= dom_id country %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Movie:</strong>
    <%= country.movie_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= country.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this country", country, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this country", edit_country_path(country), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
