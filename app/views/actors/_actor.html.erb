<div id="<%= dom_id actor %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Movie:</strong>
    <%= actor.movie_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= actor.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this actor", actor, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this actor", edit_actor_path(actor), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
